{
  "name": "beater-snapshot",
  "description": "A snapshot testing library for beater.",
  "version": "0.2.0",
  "author": "bouzuya <m@bouzuya.net> (https://bouzuya.net/)",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ]
  },
  "bugs": {
    "url": "https://github.com/bouzuya/beater-snapshot/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@types/node": "^10.17.13",
    "beater": "^8.0.1",
    "beater-helpers": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.2",
    "watch": "^1.0.2"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/bouzuya/beater-snapshot",
  "keywords": [
    "beater",
    "bouzuya",
    "snapshot",
    "test",
    "testing"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bouzuya/beater-snapshot.git"
  },
  "scripts": {
    "build": "npm-run-all -s \"build:es2015\" \"build:es5\" \"build:lib\"",
    "build:es2015": "tsc",
    "build:es5": "babel --out-dir .tmp/es5/ --source-maps inline .tmp/es2015/",
    "build:lib": "babel --copy-files --no-comments --out-dir lib/ .tmp/es2015/src/",
    "clean": "rimraf \".tmp\" \"lib\"",
    "prepare": "npm-run-all -s \"clean\" \"build\"",
    "test": "nyc node .tmp/es5/test/index.js",
    "watch": "npm-run-all -p \"watch:*\"",
    "watch:es2015": "npm run build:es2015 -- --watch",
    "watch:es5": "npm run build:es5 -- --watch",
    "watch:lib": "watch --wait 2 'npm run build:lib' '.tmp/es5/src/'",
    "watch:test": "watch --wait 2 'npm test' '.tmp/es5/src' '.tmp/es5/test'"
  }
}
